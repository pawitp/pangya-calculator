{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth.uid == $uid",
        ".write": "auth.uid == $uid"
      }
    },
    "records": {
      "$record": {
        ".write": "(!data.exists() || data.child('userId').val() == auth.uid) && newData.child('userId').val() == auth.uid",
        ".read": "data.child('userId').val() == auth.uid",
        ".indexOn": ["userId"]
      }
    }
  }
}
